<script>
    var button = $('#sectionBAButton');
    
    button.click(function() {
                 $('#sectionBAInfo').toggle();
                 });
				 
	var beforeAfter01ReadMore = $('#beforeAfter01ReadMore');
	var beforeAfter01HiddenContent = $('#beforeAfter01HiddenContent');
	
	beforeAfter01ReadMore.on('click', function(){
		
		beforeAfter01HiddenContent.slideToggle('slow');
		$('#hideMe').toggle();
		
		if($(this).text() == '{{{ tr.readMore }}}'){
			$(this).text('{{{ tr.hideText }}}');
			}else{
				$(this).text('{{{ tr.readMore }}}');
				}
		});	
		
		$('#beforeAfter02ReadMore').on('click', function(){
		
		$('#beforeAfter02HiddenContent').slideToggle('slow');
		
		if($(this).text() == '{{{ tr.readMore }}}'){
			$(this).text('{{{ tr.hideText }}}');
			}else{
				$(this).text('{{{ tr.readMore }}}');
				}
		});	
		
		$('#beforeAfterLinkOut').on('click', function(){
			$('#beforeAfterLink').toggle();
			$('#beforeAfterURL').select();
		});
    </script>
