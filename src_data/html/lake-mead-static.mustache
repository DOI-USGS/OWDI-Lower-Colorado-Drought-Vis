<div class="widget">
	<div class="sectionContent">
        <p>{{{ tr.lakeMeadStatic1 }}}</p>
        
		<p>{{{ tr.lakeMeadStatic2 }}}</p>
		
		<h4>{{{tr.hoverOverHint}}}</h4>

		<div id="meadElevationContainer">
			<object id="mead-elev-object" data="img/mead_elev_projected-desktop.svg" type="image/svg+xml"></object>
			<object id="mead-elev-object-mobile" data="img/mead_elev_projected-mobile.svg" type="image/svg+xml"></object>
			<div class="graphCaption">
                <p>{{{ tr.lakeMeadStatic10 }}}</p>
                
        </div>
            
                
        <p>{{{ tr.lakeMeadStatic11 }}}</p>
		
        <div id="lakeMeadHiddenContent" class="hiddenContent">
        <p>{{{ tr.lakeMeadStatic12 }}}</p>
       
       
       <p>{{{ tr.lakeMeadStatic13 }}}</p>
                
        <p>{{{ tr.lakeMeadStatic14 }}}</p>
		</div>
		
		<p id="lakeMeadReadMore" class="readMore">{{{ tr.readMore }}}</p>
                
    
		</div>
	</div>
	
	<div class="socialMedia onWhite">
		<a class="twitter-share-button" href="https://twitter.com/intent/tweet?text=Very%20cool%20visualization%20of%20the%20Colorado%20River%20Basin%20drought!&hashtags=crdrought,owdi%20http:%2F%2Fdoi.gov%2Fwater%2Fowdi.cr.drought" target="_blank">
			<img src="../img/social-media/twitter-blue-01.svg" alt="twitter icon"/>
		</a>
		<img src="../img/social-media/github-blue-01.svg" alt="github icon"/>
		<img id="lakeMeadLinkOut" src="../img/social-media/link-blue-01.svg" alt="link icon"/>
		<div id="lakeMeadLink" class="takeLinkBlue" >
			<input id="lakeMeadURL" type="text" value="http://go.usa.gov/#meadStaticContainer">
		</div>
	</div>


</div>

<script>
	
	var lakeMeadReadMore = $('#lakeMeadReadMore');
	var lakeMeadHiddenContent = $('#lakeMeadHiddenContent');
	
	lakeMeadReadMore.on('click', function(){
		
		lakeMeadHiddenContent.slideToggle('slow');
		
		if($(this).text() == 'Read More >>'){
			$(this).text('Hide Text');
			}else{
				$(this).text('Read More >>');
				}
		});	
		
		$('#lakeMeadLinkOut').on('click', function(){
			$('#lakeMeadLink').toggle();
			$('#lakeMeadURL').select();
		});
</script>
