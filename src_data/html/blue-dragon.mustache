<div class="widget">

<div class="sectionContent" id="blueDragonSection">

        <p>{{{ tr.blueDragon1 }}}</p>
        
		<div id="blueDragonHiddenContent" class="hiddenContent">
        
        <p>{{{ tr.blueDragon3 }}}</p>
        
        <p>{{{ tr.blueDragon4 }}}</p>
		</div>
		
		<p id="blueDragonReadMore" class="readMore">{{{ tr.readMore }}}</p>
		
		<h4>{{{tr.blueDragonHint}}}</h4>
       
	<div id="blueDragon">
		
		<object id="bluedragon-object" data="../img/bluedragon-animate.svg?version={{ version }}" type="image/svg+xml" ></object>
	</div>


<div class="graphCaption">
<p class="chill">{{{ tr.blueDragon5 }}}</p>

</div>


	<a href="../bluedragon.pdf" target="_blank">
		<div id="dragonText">
			<h4>{{{ tr.blueDragon6 }}}</h4>
		</div>
	</a>
	
		<div class="exploreMore" id="blueDragonExplore">
			<a href="http://txpub.usgs.gov/DSS/StoryMaps/BlueDragon/" target="_blank">
				<img src="../img/texas-app.jpg?version={{ version }}" alt="texas water science center app"/>
			</a>
			<p>{{{ tr.blueDragon8 }}}</p>
			<a href="http://txpub.usgs.gov/DSS/StoryMaps/BlueDragon/" target="_blank"><button class="extraButton">{{{ tr.explore }}}</button></a>
		</div>
		
	</div>
	
	<div class="socialMedia onWhite">
		{{> twitter}}
		{{> github}}
		<img id="blueDragonLinkOut" src="../img/social-media/link-blue-01.svg" alt="link icon"/>
		<div id="blueDragonLink" class="takeLinkBlue" >
			<input id="blueDragonURL" title="Link to Blue Dragon Section" type="text" value="http://doi.gov/water/owdi.cr.drought/en/index.html#blue-dragon">
		</div>
	</div>

</div>

<script>

	var blueDragonReadMore = $('#blueDragonReadMore');
	var blueDragonHiddenContent = $('#blueDragonHiddenContent');
	
	blueDragonReadMore.on('click', function(){
		
		blueDragonHiddenContent.slideToggle('slow');
		
		if($(this).text() == 'Read More >>'){
			$(this).text('Hide Text');
			}else{
				$(this).text('Read More >>');
				}
		});	
		
		$('#blueDragonLinkOut').on('click', function(){
			$('#blueDragonLink').toggle();
			$('#blueDragonURL').select();
		});


</script>
