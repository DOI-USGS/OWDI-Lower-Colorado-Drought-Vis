        <title>{{ tr.siteTitle }}</title>
        <link rel="icon" href="../img/usgs.ico" type="image/x-icon" />
        <link href="../css/overlay.css" rel="stylesheet" type="text/css">
        <link href="../css/main.css" rel="stylesheet" type="text/css">
        <link href="../css/normalize.css" rel="stylesheet" type="text/css">
		<link href="../css/svg.css" rel="stylesheet" type="text/css">
        <link href="../css/print.css" rel="stylesheet" type="text/css">
        <link href="../css/before-after.css" rel="stylesheet" type="text/css">
        <link href="../css/dygraph.css" rel="stylesheet" type="text/css">
        <link href="//fonts.googleapis.com/css?family=Roboto:400,500,700,100,300" rel="stylesheet" type="text/css">
		
