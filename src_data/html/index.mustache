      <script type="text/javascript" src="../js/init.js"></script>
    </head>

    <body>
        <!-- BEGIN Overlay -->
        <!-- Overlay span - This span is removed once it's faded out -->
        <span id="overlay">
            <div id="overlay-content-wrap">
                {{ tr.welcomeText }}
                <div id="overlay-spinner">
                    <img id="overlay-spinner-image" src="../img/spinner/spinner.gif" alt="[Loading Spinner]" />
                </div>
            </div>
        </span>
        <!-- END Overlay -->

        <!-- Main content -->
        <span id="application">
		
		<div id="stickynavContainer" class="menu container">
		<section id="stickynav" class="section">
		{{> stickynav }}
		</section>
            </div>
		
            <div id="Introduction" class="container">
                <section id="welcome" class="section">
		{{> welcome }}
		</section>
            </div>
	    <div id="app-explanationContainer" class="container">
                <section id="app-explanation" class="section">
		{{> app-explanation }}
		</section>
            </div>
	    <div id="Lifeline" class="container">
                <section id="mainmessage1" class="section">
		{{> mainmessage1 }}
		</section>
            </div>
            <div id="lifeLineContainer" class="container">
                <section id="co-river-lifeline" class="section">
		{{> co-river-lifeline }}
		</section>
            </div>
	    <div id="OneRiver" class="container">
                <section id="mainmessage5" class="section">
		{{> mainmessage5 }}
		</section>
            </div>
            <div id="basinDividedContainer" class="container">
                <section id="basin-divided" class="section">
		{{> basin-divided }}
		</section>
            </div>
	    <div id="ControlStructures" class="container">
                <section id="mainmessage2" class="section">
		{{> mainmessage2 }}
		</section>
            </div>
            <div id="blueDragonContainer" class="container">
                <section id="blue-dragon" class="section">
		{{> blue-dragon }}
		</section>
            </div>
	    <div id="WaterSupply" class="container">
                <section id="waterSupplyVariableOverTime" class="section">
		{{> waterSupplyVariableOverTime }}
		</section>
            </div>
	    <div id="waterSupplyVariableContentContainer" class="container">
                <section id="waterSupplyVariableContent" class="section">
		{{> waterSupplyVariableContent }}
		</section>
            </div>
		<div id="ExtendedDrought" class="container">
                <section id="mainmessagedirt" class="section">
		{{> mainmessagedirt }}
		</section>
            </div>
	    <div id="droughtContainer" class="container">
                <section id="dygraphsection" class="section">
		{{> dygraphsection }}
		</section>
            </div>
            <div id="StorageCapacity" class="container">
                <section id="mainmessage3" class="section">
		{{> mainmessage3 }}
		</section>
            </div>
            <div id="basinReservoirContainer" class="container">
                <section id="co-basin-reservoir" class="section">
		{{> co-basin-reservoir }}
		</section>
            </div>
            <div id="SupplyDemand" class="container">
                <section id="mainmessage4" class="section">
		{{> mainmessage4 }}
		</section>
            </div>
            <div id="waterUsageContainer" class="container">
                <section id="water-usage" class="section">
		{{> water-usage }}
		</section>
            </div>
            <div id="DecliningStorage" class="container">
                <section id="mainmessage6" class="section">
		{{> mainmessage6 }}
		</section>
            </div>
            <div id="beforeAfterContainer" class="container">
                <section id="before-after" class="section">
		{{> before-after }}
		</section>
            </div>
            <div id="Shortage" class="container">
                <section id="mainmessage7" class="section">
		{{> mainmessage7 }}
		</section>
            </div>
            <div id="meadStaticContainer" class="container">
                <section id="lake-mead-static" class="section">
		{{> lake-mead-static }}
		</section>
            </div>
            <div id="meadAnimatedContainer" class="container">
                <section id="lake-mead-animated" class="section">
		{{> lake-mead-animated }}
		</section>
            </div>
	    <div id="EraOfHope" class="container">
                <section id="end-era" class="section">
		{{> end-era }}
		</section>
            </div>
	    <div id="creditsContainer" class="container">
                <section id="credits" class="section">
		{{> credits }}
		</section>
            </div>

        </span>

        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.14.2/TweenMax.min.js"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
        <script type="text/javascript" src="../js/before-after.js"></script>
        <script type="text/javascript" src="../js/stickynav.js"></script>
		
    </body>

</html>
