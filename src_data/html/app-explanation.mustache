<div class="widget">
	<div class="sectionContent">
		<p>{{{ tr.appExplanation1 }}}</p>
		

		<p>{{{ tr.appExplanation2 }}}</p>

	<div id="appExplainHiddenContent" class="hiddenContent">

		<p>{{{ tr.appExplanation3 }}}</p>
        
        <p>{{{ tr.appExplanation4 }}}</p>

        <p>{{{ tr.appExplanation5 }}}</p>

		</div><!--Hidden Content-->
		
		<p id="appExplainReadMore" class="readMore">{{{ tr.readMore }}}</p>
		
	</div>
	
	<div class="socialMedia onWhite">
		{{> twitter}}
		{{> github}}
		<img id="appExplainLinkOut" src="../img/social-media/link-blue-01.svg" alt="link icon"/>
		<div id="appExplainLink" class="takeLinkBlue" >
			<input id="appExplainURL" title="Link to Application Explanation" type="text" value="http://doi.gov/water/owdi.cr.drought/en/index.html#app-explanation">
		</div>
	</div>
	
</div>
<script>
var appExplainreadMore = $('#appExplainReadMore');
var appExplainhiddenContent = $('#appExplainHiddenContent');
	appExplainreadMore.on('click', function(){
	
		appExplainhiddenContent.slideToggle('slow');
		
		if($(this).text() == '{{{ tr.readMore }}}'){
			$(this).text('{{{ tr.hideText }}}');
			}else{
				$(this).text('{{{ tr.readMore }}}');
				}
		});	
		
		$('#appExplainLinkOut').on('click', function(){
			$('#appExplainLink').toggle();
			$('#appExplainURL').select();
		});
</script>
