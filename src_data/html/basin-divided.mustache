<div class="widget">
    <div class="sectionContent">
        
		<p>{{{ tr.basinDivided1 }}}</p>
		
        
        
        
		<div id="co-basin-map">
			<object id="co-basin-object" data="img/lo_CO_borders.svg?version={{ version }}" type="image/svg+xml"></object>
		</div>
		
		<!--<img src="../img/3dbasins.jpg" alt="lower and upper colorado basins in 3D"/>-->

        <p> {{{ tr.basinDivided2 }}}</p>
        
		<div id="basinDividedHiddenContent" class="hiddenContent">
        <p> {{{ tr.basinDivided3 }}}</p>
        
        <p>{{{ tr.basinDivided4 }}}</p>
		</div>
		
		<p id="basinDividedReadMore" class="readMore">{{{ tr.readMore }}}</p>
		
		<button class="supportinginfo basins white" id="sectionBasinDivButton">{{{ tr.suppInfo }}}</button>
		
		<div class="supportingInfoContent" id="sectionBDInfo">
			<p>{{{ tr.basinDivided5 }}} </p>
		</div>
		
		<div class="exploreMore" id="basinExplore">
			<a href="../img/detailedbasinmap.png" target="_blank">
				<img src="../img/basinexplorethumbnail.jpg?version={{ version }}" alt="Detailed Colorado Basin Map"/>
			</a>
			<p>{{{ tr.basinDivided6 }}}</p>
			<a href="../img/detailedbasinmap.png" target="_blank"><button class="extraButton">{{{ tr.explore }}}</button></a>
		</div>
    
	</div>    
    
	<div class="socialMedia onWhite" id="tooHigh">
		{{> twitter}}
		{{> github}}
		<img id="basinDividedLinkOut" src="../img/social-media/link-blue-01.svg" alt="link icon"/>
		<div id="basinDividedLink" class="takeLinkBlue" >
			<input id="basinDividedURL" title="Link to a Basin Divided" type="text" value="http://doi.gov/water/owdi.cr.drought/en/index.html#basin-divided">
		</div>
	</div>
    
</div>



<script>
    var button = $('#sectionBasinDivButton');
    
    button.click(function() {
                 $('#sectionBDInfo').toggle();
                 });
				 
	var basinDividedreadMore = $('#basinDividedReadMore');
	var basinDividedhiddenContent = $('#basinDividedHiddenContent');
	
	basinDividedreadMore.on('click', function(){
		
		basinDividedhiddenContent.slideToggle('slow');
		
		if($(this).text() == '{{{ tr.readMore }}}'){
			$(this).text('{{{ tr.hideText }}}');
			}else{
				$(this).text('{{{ tr.readMore }}}');
				}
		});	
		
		$('#basinDividedLinkOut').on('click', function(){
			$('#basinDividedLink').toggle();
			$('#basinDividedURL').select();
		});
</script>
